<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Stocker.noActionBar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <item name="colorOnBackground">@color/darkOnBackgroundColor</item>
        <item name="colorSurface">@color/darkBackgroundColor</item>
        <item name="colorOnSurface">@color/darkOnBackgroundColor</item>

        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSurface</item>

        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>

        <item name="colorOnPrimary">@color/darkPrimaryTextColor</item>

        <!-- Primary brand color.
        <item name="android:colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryDarkColor</item>
        <item name="android:colorPrimaryDark">@color/darkPrimaryDarkColor</item>

         -->

        <!-- Secondary brand color.


        -->
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>

        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="android:windowContentTransitions">true</item>
        -->


        <!-- Customize your theme here. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="colorError">@color/error</item>

        <item name="android:windowContentTransitions">true</item>

        <!-- Text styles here-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.Stocker.Headline5</item>



    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.Stocker.noActionBar">

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>


    </style>

    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Text styles here-->
    <style name="TextAppearance.Stocker.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Stocker.Headline3" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>