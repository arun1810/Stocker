<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Stocker.noActionBar" parent="Theme.Material3.Dark.NoActionBar">

        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <item name="colorOnBackground">@color/darkOnBackgroundColor</item>
        <item name="colorSurface">@color/darkBackgroundColor</item>
        <item name="colorOnSurface">@color/darkOnBackgroundColor</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>

        <!-- material outline button -->
        <item name="materialButtonOutlinedStyle">@style/OutlinedButton</item>

        <!-- material calender picker style  -->
        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>



        <!-- FAB style-->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.App.ExtendedFloatingActionButton</item>

        <!-- button text appearance style -->

        <item name="android:textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>


        <!-- menu style -->
        <item name="actionMenuTextColor">@color/darkPrimaryTextColor</item>
        <item name="android:actionMenuTextColor">@color/darkPrimaryTextColor</item>
        <item name="android:textColor">@color/darkOnBackgroundColor</item>

        <item name="android:colorControlNormal">@color/darkPrimaryTextColor</item>
        <item name="colorControlActivated">@color/darkPrimaryTextColor</item> // change this color to the required cursor color your need.
        <item name="colorControlHighlight">@color/darkPrimaryTextColor</item>



        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/darkPrimaryTextColor</item>


        <!-- secondaryColor -->

        <item name="colorSecondary">@color/darkSecondaryColor</item>
        <item name="colorOnSecondary">@color/darkSecondaryTextColor</item>


        <!-- snackbar style
             -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <!-- Customize your theme here. -->

        <item name="colorError">@color/error</item>
        <item name="android:editTextStyle">@style/Widget.App.editText</item>
        <item name="editTextStyle">@style/Widget.App.editText</item>

        <!-- for state animation -->
        <item name="android:windowContentTransitions">true</item>


        <!--Text styles here -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MdcTypographyStyles.Headline5</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MdcTypographyStyles.Headline4</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MdcTypographyStyles.Headline3</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MdcTypographyStyles.Headline2</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.MdcTypographyStyles.Headline1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MdcTypographyStyles.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MdcTypographyStyles.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MdcTypographyStyles.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MdcTypographyStyles.Overline</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>



    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.Stocker.noActionBar">

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--snackbar Style -->

    <style name="snackbar_text" parent="@style/Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/darkBackgroundColor</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/darkSecondaryColor</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <!-- using backgroundTint the alpha layer is ignored -->
        <item name="backgroundTint">@color/darkOnBackgroundColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- shapable image style -->

    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- toolbar style -->

    <style name="AppTheme.Toolbar" parent="">
        <item name="android:textColorHint">@color/darkPrimaryTextColor</item>
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/darkPrimaryTextColor</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/darkPrimaryTextColor</item>
    </style>

    <!-- bottom nav Active item style -->

    <style name="Theme.Stocker.custom_bottom_nav_active_style" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <!--<item name="android:color">?attr/colorSecondaryContainer</item>-->
        <item name="android:color">@color/darkPrimaryDarkColor</item>
    </style>

    <!-- default mdc typography-->

    <style name="TextAppearance.MdcTypographyStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">96sp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">60sp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">48sp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">34sp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- edittext style -->

    <style name="Widget.App.editText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/darkOnBackgroundColor</item>

        <item name="hintTextColor">@color/darkOnBackgroundColor</item>
    </style>

    <!-- textInputLayoutStyle-->

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="hintTextColor">@color/darkOnBackgroundColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>

    </style>


    <style name="ThemeOverlay.App.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorOnSurface">@color/darkOnBackgroundColor</item>
        <item name="colorError">@color/error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="editTextStyle">@style/Widget.App.editText</item>
    </style>


    <!-- searchview style -->

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="queryBackground">@null</item>
        <!-- Background for the actions section (e.g. voice, submit) -->
        <item name="submitBackground">@color/darkPrimaryTextColor</item>
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <!-- Go/commit button icon
        <item name="goIcon">...</item>-->
        <!-- Voice search button icon
        <item name="voiceIcon">...</item>-->
        <!-- Commit icon shown in the query suggestion row
        <item name="commitIcon">...</item>-->
        <!-- Layout for query suggestion rows
        <item name="suggestionRowLayout">...</item>-->
    </style>

    <!-- fab styles -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
        <item name="backgroundTint">@color/darkSecondaryColor</item>
        <item name="tint">@color/darkSecondaryTextColor</item>
    </style>


    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/darkSecondaryColor</item>
        <item name="colorOnContainer">@color/darkSecondaryTextColor</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/darkOnBackgroundColor</item>
        <item name="android:textColor">@color/darkOnBackgroundColor</item>

    </style>

    <style name="ToggleOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="strokeColor">@color/darkOnBackgroundColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/darkOnBackgroundColor</item>
        <item name="rippleColor">@color/darkPrimaryColor</item>
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.OutlineButton</item>

    </style>

    <style name="ThemeOverlay.OutlineButton" parent="ThemeOverlay.Material3.Button">
        <item name="colorPrimary">@color/darkPrimaryColor</item>
    </style>


    <!-- material Calendar Style -->

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">

        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendar.HeaderLayout1</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Dialog1</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Dialog1</item>
    </style>

    <style name="MaterialCalendar.HeaderLayout1" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <item name="android:textSize">@style/TextAppearance.MdcTypographyStyles.Subtitle1</item>
        <item name="android:background">@color/darkBackgroundColor</item>
    </style>

    <style name="TextButton.Dialog1" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkOnBackgroundColor</item>
        <item name="backgroundTint">@color/darkBackgroundColor</item>
    </style>

</resources>