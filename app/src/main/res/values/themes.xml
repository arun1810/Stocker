<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Stocker.noActionBar" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">@color/lightBackGroundColor</item>
        <item name="colorOnBackground">@color/lightOnBackgroundColor</item>
        <item name="colorSurface">@color/lightBackGroundColor</item>
        <item name="colorOnSurface">@color/lightOnBackgroundColor</item>

        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:colorControlNormal">?attr/colorOnPrimary</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/lightPrimaryTextColor</item>

        <!-- Secondary brand color. -->

        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/lightPrimaryColor</item>
        <item name="colorError">@color/error</item>



        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>
        <item name="snackbarButtonStyle">@style/snackbar_button</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Text styles here-->
        <item name="textAppearanceHeadline5">@style/TextAppearance.Stocker.Headline5</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Stocker.Headline3</item>


    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.Stocker.noActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">

        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>

        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ShapeAppearance.CircularBorder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="AppTheme.Toolbar" parent="">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">?android:colorBackground</item>
    </style>




    <!-- Text styles here-->
    <style name="TextAppearance.Stocker.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Stocker.Headline3" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:letterSpacing">0</item>
    </style>




</resources>