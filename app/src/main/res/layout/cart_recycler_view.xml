<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cart_stock_name"
        android:textAppearance="?attr/textAppearanceHeadline6"

        android:layout_width="0dp"


        android:layout_height="wrap_content"


        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"

        android:layout_marginBottom="1dp"
        android:ellipsize="end"


        android:gravity="center_vertical|top"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@id/cart_stock_count"


        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"


        tools:text="Stock1 sdgweq8dbsie,msnfeijefneiqefjengeuhwkefdsegrg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cart_stock_count"
        android:textAppearance="?attr/textAppearanceSubtitle1"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin"

        android:layout_marginTop="1dp"

        android:layout_marginEnd="14dp"

        android:layout_marginBottom="12dp"
        android:alpha="0.8"


        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toStartOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_stock_name"
        tools:text="x1234" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cart_stock_id"
        android:textAppearance="?attr/textAppearanceSubtitle1"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="1dp"

        android:alpha="0.8"
        android:ellipsize="end"


        android:gravity="end|bottom"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/cart_stock_total_price"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="#stockID1245"


        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cart_stock_total_price"
        android:textAppearance="?attr/textAppearanceHeadline6"


        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:gravity="end|bottom"


        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide"
        app:layout_constraintTop_toBottomOf="@id/cart_stock_id"
        tools:text="â‚¹ 75626574847372434"

        />
</androidx.constraintlayout.widget.ConstraintLayout>